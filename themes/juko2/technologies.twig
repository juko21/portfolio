{% include 'incl/header.twig' %}

<body>
<div class="grid-wrapper">
    {% include 'incl/nav.twig' %}

        {% if current_page.id == "technology/index" %}
            <main class="main tech-listing" role="main">
                <h2 class="tech-title">TEKNOLOGIER</h2>
                {% for page in pages("technology/") %}
                    <div class="tech-box">
                        <a class="tech-box-header" href="{{ page.url }}">
                            <h4>{{ page.title }}</h4>
                        </a>
                        <div class="tech-box-content">
                            <p>{{ page.description }}
                        </div>
                        <a class="tech-box-link" href="{{ page.url }}">
                            LÃ¤s mer&nbsp&nbsp<i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                {% endfor %}
        {% else %}
            <main class="main tech-article" role="main">
                <div class="tech-article-listing">
                    <ul>
                    {% for page in pages("technology/") %}
                        {% if page.id != current_page.id %}
                            <li>
                                <a href="{{ page.url }}">
                                    <h4>{{ page.title }}</h4>
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                    </ul>
                </div>
                <div class="tech-article-content">
                    {{ content }}
                </div>
        {% endif %}
    
    </main>
    
    {% include 'incl/footer.twig' %}
</div>
</body>

</html>
